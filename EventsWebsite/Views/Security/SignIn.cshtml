@model SignIn
@{
    Layout = "_CMS";
}
<div class="container">
    <div class="form-body">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h2>Sign In</h2>
                    <form asp-controller="Security" asp-action="SignIn" method="post">

                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input type="text" asp-for="UserName" />
                            <span asp-validation-for="UserName" class="error">
                            </span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" />
                        </div>
                        <div class="form-group">
                            <label asp-for="RememberMe"></label></>
                            <input type="checkbox" asp-for="RememberMe" />
                        </div>


                        <button type="submit" class="add">Sign In</button>

                        <div asp-validation-summary="All" class="message"></div>

                        <h3><a asp-controller="Security" asp-action="Register">Create New User Account</a></h3>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

