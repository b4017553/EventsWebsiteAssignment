@model EventsWebsite.Models.Movie
@{
    Layout = "_CMS";
    ViewData["Title"] = "Delete Film";
}
@section MyScripts {
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/multiselect-dropdown.js"></script>
}
<div class="container">
    <div class="form-body">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Delete Film</h3>
                   
                    <form method="post">

                        <input type="hidden" name="MovieID" value="@Model.MovieID" />

                        <p>Do you want to delete this Movie? -  @Model.MovieTitle?</p>


                        <p><input type="submit" value="Delete" class="delete" /></p>

                        <p><a asp-controller="CMS" asp-action="Index" class="delete">Keep</a><br></p>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

